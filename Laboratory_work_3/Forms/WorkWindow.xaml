<Window x:Class="Laboratory_work_3.Forms.WorkWindow"
        Icon="pack://application:,,,/images/ps1.jpg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_work_3.Forms"
        mc:Ignorable="d"
        Title="Работа" Height="450" Width="800"
        Background="black">
    <Grid>
        <StackPanel Margin="20">
            <ListBox x:Name="listWork" MinHeight="150" Margin="5" Background="Orange"></ListBox>
            <Button x:Name="btWorking" Click="btWorking_Click" Margin="5" Background="Orange">Устроиться на работу</Button>
            <Button x:Name="btExit" Click="btExit_Click" Margin="5" Background="Orange">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
